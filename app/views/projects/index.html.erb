<h1>Listing projects</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Desc</th>
    <th>Pic</th>
    <th>Alt text</th>
    <th>Caption</th>
    <th>Gallery link</th>
    <th>Featured</th>
    <th>Published at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.title %></td>
    <td><%= project.desc %></td>
    <td><%= project.pic %></td>
    <td><%= project.alt_text %></td>
    <td><%= project.caption %></td>
    <td><%= project.gallery_link %></td>
    <td><%= project.featured %></td>
    <td><%= project.published_at %></td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

